{
    "name": "thoughtsatire",
    "type": "project",
    "description": "Thought Satire: Like the layers of an onion, under the first lie is another, and under that another, and they all make you cry.",
    "homepage": "http://thoughtsatire.com",

    "authors": [
        {
            "name": "Dele Omotosho",
            "email": "delomos@gmail.com",
            "homepage": "https://github.com/thoughtsatire"
        }
    ],

    "autoload": {
        "psr-0": {
            "Bedrock\\Installer": "scripts"
        }
    },

    "scripts": {
        "post-root-package-install": ["Bedrock\\Installer::addSalts"]
    },

    "repositories": [
        {
            "type": "composer",
            "url": "http://wpackagist.org"
        },
        {
            "type": "package",
            "package": {
                "name": "wordpress",
                "version": "4.0",
                "type": "webroot",
                "dist": {
                    "type": "zip",
                    "url": "https://github.com/WordPress/WordPress/archive/4.0.zip"
                },
                "require": {
                    "fancyguy/webroot-installer": "1.1.0"
                }
            }
        },

        {"type": "vcs", "url": "git@github.com:thoughtsatire/blog-theme.git"},
        {"type": "vcs", "url": "git@bitbucket.org:geleyi/social-networks-poster.git"}

    ],

    "require": {
        "php": ">=5.3.2",
        "wordpress": "4.0.*",
        "fancyguy/webroot-installer": "1.1.0",
        "composer/installers": "v1.0.6",
        "wp-cli/php-cli-tools": "dev-master",
        "wp-cli/wp-cli": "dev-master",
        "vlucas/phpdotenv": "~1.0.5",

        "wpackagist/disqus-comment-system": "*",
        "wpackagist-plugin/fd-footnotes": "dev-trunk",
        "wpackagist-plugin/jetpack": "dev-trunk",
        "wpackagist/stagtools": "*",
        "wpackagist/yet-another-related-posts-plugin": "*",
        "wpackagist/social-networks-auto-poster-facebook-twitter-g": "*",
        "wpackagist/flare": "*",


        "thoughtsatire/theme": "dev-master",
        "geleyi/social-networks-poster": "dev-master"

    },

    "extra": {
        "installer-paths": {
            "web/app/plugins/{$name}/": ["type:wordpress-plugin"],
            "web/app/mu-plugins/{$name}/": ["type:wordpress-muplugin"],
            "web/app/themes/{$name}/": ["type:wordpress-theme"]
        },
        "webroot-dir": "web/wp",
        "webroot-package": "wordpress"
    }
}
